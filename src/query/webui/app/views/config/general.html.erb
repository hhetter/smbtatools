<%= form_tag :action => "save"  do %>
  
  <table>
    <tr>
      <td>DB-host: </td><td><%=text_field_tag 'dbhost', $dbhost%></td></tr>
    <tr><td>DB-name: </td><td><%= text_field_tag 'dbname', $dbname %></td></tr>
        <tr><td>DB-driver: </td>
      <td><% options = Array.new
        @dbdrivers.each {|d| options << "#{d.to_s}"}%>
        <%=  select_tag "dbdriver", options_for_select(options, $dbdriver)%></td></tr>
        <tr><td>DB-user: </td>
          <td><%=text_field_tag "dbuser", $dbuser%></td></tr>
        <tr><td>DB-password: </td>
          <td><%=password_field_tag "dbpassword", $dbpassword%></td></tr>

    <tr><td><%=submit_tag "Commit settings"%></td></tr>
  </table>
<%end%>
