<div id="shares_and_users" style="position:relative; float:left">
  <div id="shares" style="position:relative;">
    <table>
      <tr><th>Shares</th></tr>
      <tr><td><%=select_tag "sharelist", options_for_select(@shares, @share), :size => 5, :onClick => "shareOnClickChange()" %></td>
        <td><%=image_tag('arrow.png', :alt => "List files", :title => "List files")%></td></tr>
    </table>
    <%= select_tag "sharesfunc", options_for_select(["","total", "top","usage", "last_activity"], @function)%>
    <%= hidden_field_tag "domain",  @domain %>
    <%= hidden_field_tag "share", @share %>
    <div id="spinner_shares" class="spinner" style="display: none; float:right"><%=image_tag('spinner.gif')%></div>
    <div id="spinner_getfiles" class="spinner" style="display: none; float:left"><%=image_tag('spinner.gif')%>  </div>
  </div>
