Change Settings for: <br/>
<%=@user.username%>
<%= form_for @user do |f| %>
<p>
  <%= f.label :username %><br />
  <%= f.text_field :username %>
</p>
<p>
  <%= f.label :password %><br />
  <%= f.password_field :password %>
</p>
<p>
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %>
</p>
<p>
  <%= f.label :admin %><br/>
  <%= f.check_box :admin %>
</p>
<p class="button"><%= f.submit %></p>
<%end%>